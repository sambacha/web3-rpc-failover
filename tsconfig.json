{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "rootDir": "./src",
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "es2020",
    "types": [],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "src/**/*.test.ts"
  ]
}
